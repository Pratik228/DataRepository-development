<%- include ("../partials/header") %>

  <div class="container-fluid px-5 pt-2">
    <section id="form">
      <form id="myForm" class="needs-validation" novalidate action="/faculty/JournalPaperPublication"
        data-isinsertmode=<%=isInsertMode%>>


        <!-- Header Section -->

        <div class="row data-row">
          <div class="col-md-8 mb-3">
            <h4 class="mb-3 title">Paper and Journal Publication Form</h4>
          </div>
          <div class="col-md-4 mb-3 report">
            <a href="/faculty/search" class="btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
          </div>
        </div>
        <div class="row data-row">
          <div class="col-md-6 mb-3">
            <label class="required">RC-ID</label>
            <input type="text" name="rcId" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Publisher Name</label>
            <input type="text" name="PublisherName" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
        </div>
        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <label class="required">Title of the Paper</label>
            <input type="text" name="title" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Type of Journal/Conference</label>
            <select name="type" class="custom-select d-block w-100">
              <option value="">Choose...</option>
              <option>National Conference</option>
              <option>International Conference</option>
              <option>Journal</option>
            </select>
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
        </div>

        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <label class="required">ISBN Number</label>
            <input type="text" name="isbn" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">ISSN Number</label>
            <input type="text" name="issn" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Volume Number/Issue/Edition</label>
            <input type="text" name="volumeNumber" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Name of Journal/Conference</label>
            <input type="text" name="nameOfJournal" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
        </div>


        <div class="row data-row">


          <div class="col-md-6 mb-3">
            <label class="required">COE</label>

            <!-- COE  -->

            <%- include ("../partials/coe") %>

              <div class="invalid-feedback">
                Please select a valid type.
              </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Indexed To</label>
            <br>
            <select name="Indexid" id="Index" class="custom-select d-block w-100">
              <option value="Scopus">Scopus</option>
              <option value="SCI">SCI</option>
              <option value="Web of Science">Web of Science</option>
              <option value="Others">Others</option>
               
           </select>
           
           

          </div>
        </div>
        

        <div class="row data-row">
          <div class="col-md-12 mb-3">
            <%- include ("../partials/description") %>


              <div class="submit-button">
                <%if(isInsertMode){%>
                  <button class="btn btn-primary btn-lg btn-block buttons" type="submit">
                    Submit</button>
                  <%} else{%>
                    <button class="btn btn-secondary btn-lg btn-block buttons" type="submit">
                      Update</button>
                    <span id='variableJSON' hidden>
                      <%= JSON.stringify(data); %>
                    </span>
                    <%}%>
              </div>
          </div>
        </div>



      </form>



    </section>

  </div>

  <!-- Footer -->


  <%- include ("../partials/footer") %>


    </script>

    </body>

    </html>