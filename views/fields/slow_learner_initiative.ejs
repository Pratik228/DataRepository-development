<%- include ("../partials/header") %>

  <div class="container-fluid px-5 pt-2">
    <section id="form">
      <form id="myForm" class="needs-validation" novalidate action="/faculty/SlowLearnerInitiative"
        data-isinsertmode=<%=isInsertMode%>>


        <!-- Header Section -->

        <div class="row data-row">
          <div class="col-md-8 mb-3">
            <h4 class="mb-3 title">Slow Learner's Initiative</h4>
          </div>
          <div class="col-md-4 mb-3 report">
            <a href="/faculty/search" class="btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
          </div>
        </div>

        <div class="row data-row">
          <div class="col-md-6 mb-3">
            <label class="required">Slow Learner's Initiative</label>
            <select name="activityType" class="custom-select d-block w-100" id="selectBox" onChange="changeFunc();">
              <option value="">Choose...</option>
              <option>ICP</option>
              <option>Remedial Classes</option>

              <option value="others">Others</option>
              <input name="activityType" placeholder="Mention Here..." class="form-control other-text" type="text"
                style="display: none" id="textboxes">
              <div class="invalid-feedback">
                Please select a valid type.
              </div>
            </select>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Semester</label>
            <select name="level" class="custom-select d-block w-100">
              <option value="">Choose...</option>
              <option>First Semester</option>
              <option>Second Semester</option>
              <option>Third Semester</option>
              <option>Fourth Semester</option>
              <option>Fifth Semester</option>
              <option>Sixth Semester</option>
              <option>Seventh Semester</option>
              <option>Eighth Semester</option>
              <option>All Semester</option>
            </select>
            <div class="invalid-feedback">
              Please select a valid type.
            </div>
          </div>


        </div>


        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <label class="required">Subject Name</label>
            <input type="text" name="subjectName" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Topic</label>
            <input type="text" name="topic" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
        </div>

        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <label class="required">Subject Code</label>
            <input type="text" name="subjectCode" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>

          <div class="col-md-6 mb-3">
            <label class="required">Department</label>
            <select name="department" class="custom-select d-block w-100">
              <option value="">Choose...</option>
              <option>CSE</option>
              <option>ISE</option>
              <option>ECE</option>
              <option>TCE</option>
              <option>EEE</option>
              <option>CIV</option>
              <option>MECH</option>
              <option>MBA</option>
              <option>MCA</option>
              <option>Basic Sciences</option>
              <option>College Level</option>
            </select>
            <div class="invalid-feedback">
              Please select a valid type.
            </div>
          </div>

        </div>


        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <label class="required">Number of Students Attended</label>
            <input type="number" name="count" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>

          <div class="col-md-6 mb-3">
            <label class="required">Faculty ID</label>
            <input type="text" name="id" class="form-control" required>
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
            
            
          </div>

        </div>


        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <label for="date" class="required">Start Date</label>
            <input type="date" name="startDate" class="form-control date__control start__date">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label for="date" class="required">End Date</label>
            <input type="date" name="endDate" class="form-control end__date">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
        </div>




        <div class="row data-row">
          <div class="col-md-12 mb-3">
            <%- include ("../partials/description") %>


              <div class="submit-button">
                <%if(isInsertMode){%>
                  <button class="btn btn-primary btn-lg btn-block buttons" type="submit">
                    Submit</button>
                  <%} else{%>
                    <button class="btn btn-secondary btn-lg btn-block buttons" type="submit">
                      Update</button>
                    <span id='variableJSON' hidden>
                      <%= JSON.stringify(data); %>
                    </span>
                    <%}%>
              </div>
          </div>
        </div>



      </form>



    </section>

  </div>

  <!-- Footer -->


  <%- include ("../partials/footer") %>


    </script>

    </body>

    </html>