<%- include ("../partials/header") %>

  <div class="container-fluid px-5 pt-2">
    <section id="form">
      <form id="myForm" class="needs-validation" novalidate action="/faculty/EventsAttended"
        data-isinsertmode=<%=isInsertMode%>>


        <!-- Header Section -->

        <div class="row data-row">
          <div class="col-md-8 mb-3">
            <h4 class="mb-3 title">Events Attended Data Entry</h4>
          </div>
          <div class="col-md-4 mb-3 report">
            <a href="/faculty/search" class="btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
          </div>
        </div>
        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">Activity Name</label>
              <input type="text" name="activityName" class="form-control" required>
              <div class="invalid-feedback">
                Valid details required.
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">Topic</label>
              <input type="text" name="topic" class="form-control" required>
              <div class="invalid-feedback">
                Valid details required.
              </div>
            </div>
          </div>
        </div>

        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">Faculty ID</label>
            <input type="text" name="id" class="form-control" required>
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label for="Salary">Attended At</label>
              <input type="text" name="attendedAt" class="form-control" required>
              <div class="invalid-feedback">
                Valid details required.
              </div>
            </div>
          </div>
        </div>
        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">Start Date</label>
              <input type="date" name="startDate" class="form-control date__control start__date" required>
              <div class="invalid-feedback">
                Valid details required.
              </div>
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <div class="form-group">
              <label class="required">End Date</label>
              <input type="date" name="endDate" class="form-control end__date" required>
              <div class="invalid-feedback">
                Valid details required.
              </div>
            </div>
          </div>
        </div>
        <div class="row data-row">
          <div class="col-md-6 mb-3">
            <label>Event Objectives</label>
            <input type="text" name="objective" class="form-control">
          </div>
          <div class="col-md-6 mb-3">
            <label>Event Benefits</label>
            <input type="text" name="benefits" class="form-control">
          </div>

        </div>
        <div class="row data-row">
          <div class="col-md-4 mb-3">
            <label class="required">Activity Type</label>
            <select name="activityType" class="custom-select d-block w-100" id="selectBox" required
              onChange="changeFunc();">
              <option value="">Choose...</option>
              <option>Conference</option>
              <option>Experrt Lecture</option>
              <option>FDP</option>
              <option>Guest Lecture</option>
              <option>Industry Visit</option>
              <option>NCC</option>
              <option>NSS</option>
              <option>Placement Talk</option>
              <option>Seminars</option>
              <option>Webinars</option>
              <option>Symposium</option>
              <option>Training programme</option>
              <option>Workshops</option>
              <option>Invited Talks</option>
              <option value="others">Others</option>
              <input name="activityType" placeholder="Mention Here..." class="form-control other-text" type="text"
                style="display: none" id="textboxes">
              <div class="invalid-feedback">
                Please select a valid type.
              </div>
            </select>
          </div>
          <div class="col-md-4 mb-3">
            <label class="required">Level</label>
            <select name="level" class="custom-select d-block w-100">
              <option value="">Choose...</option>
              <option>Department</option>
              <option>College</option>
              <option>Inter-College</option>
              <option>University</option>
              <option>State</option>
              <option>National</option>
              <option>International</option>
            </select>
            <div class="invalid-feedback">
              Please select a valid type.
            </div>
          </div>

          <div class="col-md-4 mb-3">
            <label class="required">COE</label>

            <!-- COE  -->

            <%- include ("../partials/coe") %>

              <div class="invalid-feedback">
                Please select a valid type.
              </div>
          </div>
        </div>
        <div class="row data-row">
          <div class="col-md-12 mb-3">
            <%- include ("../partials/description") %>


              <div class="submit-button">
                <%if(isInsertMode){%>
                  <button class="btn btn-primary btn-lg btn-block buttons" type="submit">
                    Submit</button>
                  <%} else{%>
                    <button class="btn btn-secondary btn-lg btn-block buttons" type="submit">
                      Update</button>
                    <span id='variableJSON' hidden>
                      <%= JSON.stringify(data); %>
                    </span>
                    <%}%>
              </div>
          </div>
        </div>


      </form>



    </section>

  </div>

  <!-- Footer -->


  <%- include ("../partials/footer") %>
    <!-- JavaScript for ckeditor -->
    </script>
    </body>

    </html>