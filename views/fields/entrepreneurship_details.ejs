<%- include ("../partials/header") %>

  <div class="container-fluid px-5 pt-2">
    <section id="form">
      <form id="myForm" class="needs-validation" novalidate action="/faculty/EntrepreneurshipDetails"
        data-isinsertmode=<%=isInsertMode%>>


        <!-- Header Section -->

        <div class="row data-row">
          <div class="col-md-8 mb-3">
            <h4 class="mb-3 title">Entrepreneurship Details</h4>
          </div>
          <div class="col-md-4 mb-3 report">
            <a href="/faculty/search" class="btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
          </div>
        </div>


        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <label class="required">Company Name</label>
            <input type="text" name="CompanyName" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Company Address</label>
            <input type="text" name="CompanyAddress" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
        </div>
        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <label for="date" class="required">Establishment Date</label>
            <input type="date" name="establishmentDate" class="form-control date__control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Faculty ID</label>
            <input type="text" name="id" class="form-control" required>
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>

        </div>
        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <label>Revenue Generated</label>
            <input type="text" name="revenue" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>


          <div class="col-md-6 mb-3">
            <label class="required">Objectives</label>
            <input type="text" name="objectives" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Benefit in terms of learning/Skill/Knowledge obtained</label>
            <input type="text" name="benefit" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Company Type</label>
            <input type="text" name="Companytype" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>



        </div>
        <div class="row data-row">




          <div class="col-md-6 mb-3">
            <label class="required">COE</label>

            <!-- COE  -->

            <%- include ("../partials/coe") %>

              <div class="invalid-feedback">
                Please select a valid type.
              </div>
          </div>

          <div class="col-md-6 mb-3">
            <label class="required">In Association with</label>
            <br>
            <select name="Association" id="Association" class="custom-select d-block w-100">
              <option value="CSE">CSE</option>
               <option value="ISE">ISE</option>
               <option value="CIVIL">CIVIL</option>
               <option value="MECH">MECH</option>
               <option value="ECE">ECE</option>
               <option value="EEE">EEE</option>
               <option value="BS">BS</option>
               <option value="MBA">MBA</option>
               <option value="MCA">MCA</option>
               <option value="TCE">TCE</option>
           </select>
            
          </div>
        </div>

        <div class="row data-row">
          <div class="col-md-12 mb-3">
            <%- include ("../partials/description") %>


              <div class="submit-button">
                <%if(isInsertMode){%>
                  <button class="btn btn-primary btn-lg btn-block buttons" type="submit">
                    Submit</button>
                  <%} else{%>
                    <button class="btn btn-secondary btn-lg btn-block buttons" type="submit">
                      Update</button>
                    <span id='variableJSON' hidden>
                      <%= JSON.stringify(data); %>
                    </span>
                    <%}%>
              </div>
          </div>
        </div>



      </form>



    </section>

  </div>

  <!-- Footer -->


  <%- include ("../partials/footer") %>


    </script>

    </body>

    </html>