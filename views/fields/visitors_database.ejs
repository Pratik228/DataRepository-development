<%- include ("../partials/header") %>

  <div class="container-fluid px-5 pt-2">
    <section id="form">
      <form id="myForm" class="needs-validation" novalidate action="/faculty/VisitorsDatabase"
        data-isinsertmode=<%=isInsertMode%>>


        <!-- Header Section -->

        <div class="row data-row">
          <div class="col-md-8 mb-3">
            <h4 class="mb-3 title">Visitors Database(Academic/Professional Trainers)</h4>
          </div>
          <div class="col-md-4 mb-3 report">
            <a href="/faculty/search" class="btn btn-sm btn-primary shadow-sm"><i
                class="fas fa-download fa-sm text-white-50"></i> Generate Report</a>
          </div>
        </div>
        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <label class="required">Visitor Name</label>
            <input type="text" name="visitorName" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Mobile Number</label>
            <input type="text" name="number" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
        </div>

        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <label class="required">Company/College Name</label>
            <input type="text" name="companyName" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Email ID(Official/Personal)</label>
            <input type="text" name="address" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
        </div>
        <div class="row data-row">

          <div class="col-md-6 mb-3">
            <label for="date" class="required">Date of Visit</label>
            <input type="date" name="visitDate" class="form-control date__control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>
          <div class="col-md-6 mb-3">
            <label class="required">Department</label>
            <select name="department" class="custom-select d-block w-100">
              <option value="">Choose...</option>
              <option>CSE</option>
              <option>ISE</option>
              <option>ECE</option>
              <option>TCE</option>
              <option>EEE</option>
              <option>CIV</option>
              <option>MECH</option>
              <option>MBA</option>
              <option>MCA</option>
              <option>Basic Sciences</option>
              <option>College Level</option>
            </select>
            <div class="invalid-feedback">
              Please select a valid type.
            </div>
          </div>

        </div>
        <div class="row data-row">
          <div class="col-md-6 mb-3">
            <label class="required">College/Company Address</label>
            <input type="text" name="address" class="form-control">
            <div class="invalid-feedback">
              Please enter valid details.
            </div>
          </div>

        </div>

        <div class="row data-row">
          <div class="col-md-12 mb-3">
            <%- include ("../partials/description") %>


              <div class="submit-button">
                <%if(isInsertMode){%>
                  <button class="btn btn-primary btn-lg btn-block buttons" type="submit">
                    Submit</button>
                  <%} else{%>
                    <button class="btn btn-secondary btn-lg btn-block buttons" type="submit">
                      Update</button>
                    <span id='variableJSON' hidden>
                      <%= JSON.stringify(data); %>
                    </span>
                    <%}%>
              </div>
          </div>
        </div>



      </form>



    </section>

  </div>

  <!-- Footer -->


  <%- include ("../partials/footer") %>


    </script>

    </body>

    </html>